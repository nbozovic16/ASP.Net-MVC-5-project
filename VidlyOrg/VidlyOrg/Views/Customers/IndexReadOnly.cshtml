@model IEnumerable<VidlyOrg.Models.Customer>
@{
	ViewBag.Title = "Customers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


<table id="customers" class="table table-bordered table-hover">
