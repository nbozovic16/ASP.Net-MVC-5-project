@model VidlyOrg.ViewModel.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextAreaFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor( c => c.Customer.Name)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.DrivingLicence) Driving licence ?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DrivinLicenceReleaseDate)
        @Html.TextBoxFor(c => c.Customer.DrivinLicenceReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.DrivinLicenceReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Birhdate)
        @Html.TextBoxFor(c => c.Customer.Birhdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.Birhdate)
    </div>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary" })

    @Html.HiddenFor(c => c.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
    
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")    
}